<div class="container">
   <div class="row">
     <div class="col-md-10 col-md-offset-1">

       <!-- page-header 裡面顯示個人檔案資料 -->
       <div class="page-header">

         <div class="col-md-3 col-sm-4">
           <div class="text-center">
            <% if @user.avatar.url %>
              <%= image_tag @user.avatar.url, class: "img-responsive center-block" %>
            <% else %>
              <img src="http://via.placeholder.com/300x300" class="img-responsive img-rounded">
            <% end %>
           </div>
         </div>

         <div class="col-md-9 col-sm-8">
           <h2><%= @user.name %></h2>
           <p><strong><%= @user.email %></strong></p>
           <div><%= simple_format @user.intro %></div>
           <% if @user.email == current_user.email %>
             <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
           <% end %>
         </div>
         <div class="clearfix"></div>

       </div>

       <br>

       <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><strong><%= @commented_restaurants.count %></strong> 已評論餐廳</h3>
          </div>
          <div class="panel-body">
            <% @commented_restaurants.each do |restaurant| %>
            <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant">
              <div>
                <% if restaurant.image.url %>
                  <%= image_tag restaurant.image.url, class: "img-responsive img-rounded" %>
                <% else %>
                  <img src="http://via.placeholder.com/50x50" class="img-responsive img-rounded">
                <% end %>
              </div>
              <h5><%= restaurant.name %></h5>
            </div>
            <% end %>
            <% end %>
          </div>


     </div>
   </div>
 </div>
